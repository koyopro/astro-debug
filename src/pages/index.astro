---
import Layout from "../layouts/Layout.astro";

function myDecorator(originalMethod: any, _context: any) {
  function replacementMethod(this: any, ...args: any[]) {
    return `${Date.now()}: ${originalMethod.call(this, ...args)}`;
  }

  return replacementMethod;
}

class MyClass {
  @myDecorator
  greet() {
    return "Hello.";
  }
}
const m = new MyClass();
---

<Layout>
	Message: {m.greet()}
</Layout>
